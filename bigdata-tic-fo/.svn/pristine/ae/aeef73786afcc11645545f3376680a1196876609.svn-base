<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>

<%@ taglib prefix="c"		uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="cm" 		uri="/WEB-INF/tlds" %>
<%@ taglib prefix="spring"  uri="http://www.springframework.org/tags" %>

<%@ page import="com.katri.common.Const" %>
<c:set var="INST_MASTER" 	value="<%=Const.Code.UserTyCd.INST_MASTER%>" />
<c:set var="INST_GENERAL" 	value="<%=Const.Code.UserTyCd.INST_GENERAL%>" />
<c:set var="ENT_MASTER" 	value="<%=Const.Code.UserTyCd.ENT_MASTER%>" />
<c:set var="ENT_GENERAL" 	value="<%=Const.Code.UserTyCd.ENT_GENERAL%>" />
<c:set var="GENERAL" 	value="<%=Const.Code.UserTyCd.GENERAL%>" />

<script type="text/javascript">
	const mType = [ "general", "master" ]; // 회원 유형

	$(function(){
		// 이메일 도메인 select box
		fn_selectEmail();

		// 회원 유형 초기값
		fn_memberTypeInit();

		// 회원 유형 선택 시
		fn_checkUserTyCd();
	});

	/* 뒤로가기 감지 */
	window.onpageshow = function(event){
		if(event.persisted || (window.performance && window.performance.navigation.type == 2)){
			// 아이디 찾기 입력 값 초기화
			$("#emlAddrId").val("");
			$("#chkCertNo").val("");
			$("#emailAddr").val("");
			$("#selEmlAddr").val("").prop("selected", true);
		}
	}

	// 숫자 형식 체크
	$(document).on("keyup", "#chkCertNo", function(event){
		if (!(event.keyCode >= 37 && event.keyCode <= 40)) {
			var inputVal = $(this).val();
			$(this).val(inputVal.replace(/[^0-9]/gi,''));
		}
	});

	/**
	 * 이메일 도메인 select box
	 */
	function fn_selectEmail() {
		/* 이메일 선택 */
		$("#selEmlAddr").on("change", function(){
			if ($(this).val() === "") { // 선택 전
				$("#emailAddr")
					.attr("readonly", true)
					.val("");
			} else if ($(this).val() === "etc") { // 직접입력
				$("#emailAddr")
					.attr("readonly", false)
					.val("");
			} else {
				$("#emailAddr")
					.attr("readonly", true)
					.val($("#selEmlAddr option:checked").text());
			}
		});
	}

	/**
	 * 회원 유형 선택 시
	 */
	function fn_checkUserTyCd() {
		/* 회원유형 선택 시 변경 */
		$("input:radio[name='typeMem']").on("click", function(){
			// 회원유형 코드 선택 값 가져오기
			const checkedUserTyCd = $("input:radio[name='typeMem']:checked").attr("value");
			// 회원유형 코드 값 설정
			$("#userTyCd").val(checkedUserTyCd);

			const key = $(this).attr("data-key"); // [ "general", "master" ]
			const value = $(this).attr("value"); // 선택한 회원 유형 코드

			// 일반 마스터 회원 분기 처리
			if (key === mType[0]) { // 일반 회원일 경우
				fn_memberTypeInit(); // 회원 유형 초기값
			} else { // 마스터 회원일 경우
				$("." + mType[0]).hide(); // 일반 hide
				$("." + mType[1]).show(); // 마스터 show
			}
		});
	}

	/**
	 * 회원유형에 따른 인증방식 보여주기
	 */
	function fn_memberTypeInit() {
		// 기본값 (개인 회원)
		$("input:radio[name='typeMem'][value='${GENERAL}']").attr("checked", true);

		// 회원유형 코드 선택 값 가져오기
		const checkedUserTyCd = $("input:radio[name='typeMem']:checked").attr("value");

		// 회원유형 코드 값 설정
		$("#userTyCd").val(checkedUserTyCd);

		$("." + mType[0]).show(); // 일반 show
		$("." + mType[1]).hide(); // 마스터 hide
	}

	/**
	 * 이메일 유효성 검사
	 */
	function fn_emailValid() {
		let isValid = false;

		// 이메일 사용자 ID 검사
		if ($.trim($("#emlAddrId").val()) === "") {
			alert("<spring:message code='result-message.messages.user.message.required.email'/>"); // 이메일 주소를 입력해주세요.
			$("#emlAddrId").focus();
		}
		// 이메일 도메인 검사
		else if ($.trim($("#selEmlAddr").val()) === "") {
			alert("<spring:message code='result-message.messages.user.message.required.domain'/>"); // 도메인 주소를 선택해주세요.
			$("#selEmlAddr").focus();
		}
		// 직접 입력 시,
		else if($.trim($("#emailAddr").val()) === "") {
			alert("<spring:message code='result-message.messages.common.message.required.data2' arguments='직접 입력할 주소'/>") // '{0}를(을) 입력해주세요.'
			$("#emailAddr").focus();
		}
		else {
			isValid = true;
		}

		return isValid;
	}

	/**
	 * 이메일 인증 번호 전송
	 */
	function fn_emailCert() {
		/* 유효성 검사 */
		if (fn_emailValid()) {
			$.blockUI();
			const emlAddrId = $("#emlAddrId").val(); // 이메일 사용자 ID
			const emlAddr 	= $("#emailAddr").val(); // 이메일 도메인

			const rcvrEmlAddr	 = emlAddrId + "@" + emlAddr; // 입력받은 이메일 주소

			/* 인증 메일 전송 */
			$.ajax({
				  url	 	: "/auth/certMailSend"
				, type 		: "POST"
				, dataType 	: "json"
				, data 		: { "rcvrEmlAddr" : rcvrEmlAddr }
				, success 	: function(result) {
					$.unblockUI();

					if (result.resultCode === 200) {
						// 메일 인증 발송 성공 시,
						if (result.data) {
							alert(result.resultMessage);
						}
					} else {
						alert(result.resultMessage);
					}
				}
			});
		}
	}

	/**
	 * 인증번호 유효성 검사
	 */
	function fn_certValid() {
		let isValid = false;

		if ($.trim($("#chkCertNo").val()) === "") {
			alert("<spring:message code='result-message.messages.user.message.required.cert'/>"); // 인증번호가 누락되었습니다 입력해 주세요.
			$("#chkCertNo").focus();
		} else {
			isValid = true;
		}

		return isValid;
	}

	/**
	 * 인증번호 확인
	 */
	function fn_emailCertNoChk() {
		/* 유효성 검사 */
		if (fn_certValid()) {
			$.blockUI();

			const emlAddrId = $("#emlAddrId").val(); // 이메일 사용자 ID
			const emlAddr 	= $("#emailAddr").val(); // 이메일 도메인

			const rcvrEmlAddr	= emlAddrId + "@" + emlAddr; // 입력받은 이메일 주소
			const chkCertNo	= $("#chkCertNo").val();		 // 입력한 인증 번호
			const userTyCd = $("#userTyCd").val(); // 선택한 회원유형

			/* 인증 번호 확인 */
			$.ajax({
				  url		: "/auth/certNoChk"
				, type 		: "POST"
				, dataType 	: "json"
				, data 		: {
					  "rcvrEmlAddr" : rcvrEmlAddr
					, "chkCertNo" 	: chkCertNo
					, "userTyCd" : userTyCd
				}
				, success 	: function(result) {
					$.unblockUI();

					if (result.resultCode === 200) {
						// 비교한 값
						if ( result.data === null || result.data === "") {
							alert(result.resultMessage);
							$("#emailCertYn").val("N");
						} else {
							$("#emailCertYn").val("Y");

							// 마스킹된 회원 아이디를 담아 submit
							$("#userId").val(result.data.userId);

							// 인증방식에 따라 (마스킹된)아이디 조회 페이지 이동
							fn_submitFindId();
						}
					} else {
						alert(result.resultMessage);
					}
				}
			});
		}
	}

	/**
	 * 아이디 찾기 결과 페이지 이동
	 */
	function fn_submitFindId() {
		$("#findIdFrm").attr({
			  method: "POST"
			, action: "/auth/findIdRes"
		}).submit();
	}

	/**
	 * 휴대폰 인증
	 */
	function fn_checkPlusSafeModel(){
		window.name ="Parent_window";

		window.open('', 'popupChk', 'width=500, height=550, top=100, left=100, fullscreen=no, menubar=no, status=no, toolbar=no, titlebar=yes, location=no, scrollbar=no');
		document.form_chk.action = "https://nice.checkplus.co.kr/CheckPlusSafeModel/checkplus.cb";
		document.form_chk.target = "popupChk";
		document.form_chk.submit();
	}

	/**
	 * 휴대폰 인증 콜백
	 */
	function fn_nicePassSuccessCallBack(  pReqSeq	, pResSeq, pAuthType	, pName	, pEncName
										, pBirthdate, pGender, pNationalinfo, pDi	, pCi
										, pMobileNo	, pMobileCo , nResultCode ) {

		// 본인인증 CI 동일 체크
		$.ajax({
			  url: "/auth/getFindByCi"
			, type: "post"
			, dataType: "json"
			, data: {
				  pCi : pCi							// 연계정보 확인값
				, userTyCd : $("#userTyCd").val()	// 회원 유형
			}
			, success: function(result) {
				if (result.resultCode === 200) {
					if (result.data.userId !== null || result.data.userId !== "") {
						/* 아이디 찾기 결과 페이지 이동 */
						// 마스킹된 회원 아이디를 담아 submit
						$("#userId").val(result.data.userId);

						// 인증방식에 따라 (마스킹된)아이디 조회 페이지 이동
						fn_submitFindId();
					} else {
						alert(result.resultMessage); // 입력한 정보와 일치하는 회원정보가 없습니다.
					}
				} else {
					alert(result.resultMessage);
				}
			}
		});
	}

</script>

<!-- ===== header ====== -->
<header id="header">
	<div id="sub-mv" class="sub-mem">
		<div class="inner">
			<h2>로그인</h2>
			<div class="sub-obj">오브젝트</div>
		</div>
	</div>
</header>
<!-- ===== /header ====== -->

<!-- ===== container ====== -->
<div id="container">

	<!--container-->
	<div id="cont" class="cont-login">
		<form name="findIdFrm" id="findIdFrm">
			<input type="hidden" name="userTyCd" id="userTyCd" />
			<input type="hidden" name="userId" id="userId">
		</form>

		<h2 class="tit">아이디 찾기</h2>

		<!-- 일반 -->
		<h3 class="tit general">아이디는 가입 시 입력하신 휴대폰 본인인증을 통해 찾을 수 있습니다.</h3>
		<article class="info-rect tBr general">
			<p>본인 확인이 되지 않으면 아이디 찾기에 도움을 드리기 어렵습니다.</p>
		</article>

		<!-- 마스터 -->
		<h3 class="tit master">아이디는 가입 시 입력하신 이메일 인증을 통해 찾을 수 있습니다.</h3>
		<article class="info-rect tBr master">
			<p>회원정보에 등록한 이메일 주소와 입력한 이메일 주소가 같아야 합니다.</p>
			<p>이메일 확인이 되지 않으면 아이디 찾기에 도움을 드리기 어렵습니다.</p>
		</article>

		<article class="info-rect find-id-wr">
		<p>회원유형 선택</p>
		<ul>
			<li>
				<label for="type-mem01">
					<input type="radio" class="typeMem" data-key="general" id="type-mem01" name="typeMem" value="${GENERAL}"/><span>개인 회원</span>
				</label>
			</li>
			<li>
				<label for="type-mem02">
					<input type="radio" class="typeMem" data-key="general" id="type-mem02" name="typeMem" value="${ENT_GENERAL}"/><span>기업 일반 회원</span>
				</label>
			</li>
			<li>
				<label for="type-mem03">
					<input type="radio" class="typeMem" data-key="general" id="type-mem03" name="typeMem" value="${INST_GENERAL}"/><span>기관 일반 회원</span>
				</label>
			</li>
			<li>
				<label for="type-mem04">
					<input type="radio" class="typeMem" data-key="master" id="type-mem04" name="typeMem" value="${ENT_MASTER}"/><span>기업 마스터 회원</span>
				</label>
			</li>
			<li>
				<label for="type-mem05">
					<input type="radio" class="typeMem" data-key="master" id="type-mem05" name="typeMem" value="${INST_MASTER}"/><span>기관 마스터 회원</span>
				</label>
			</li>
		</ul>
		</article>

		<!-- 일반 -->
		<div class="btn-wr general">
			<!-- 본인인증 서비스 팝업을 호출하기 위해서는 다음과 같은 form이 필요합니다. -->
			<form name="form_chk" method="post">
				<input type="hidden" name="m" value="checkplusService">		<!-- 필수 데이타로, 누락하시면 안됩니다. -->
				<input type="hidden" name="EncodeData" value="${sEncData}">	<!-- 위에서 업체정보를 암호화 한 데이타입니다. -->
				<a href="javascript:void(0)" onclick="fn_checkPlusSafeModel()" class="btn">본인인증</a>
			</form>
		</div>

		<!-- 마스터 -->
		<article class="info-rect lock-prove-wr master">
			<ul>
				<li>
					<label>이메일 인증</label>
					<input type="hidden" name="emailCertYn" id="emailCertYn" value="N"/>
					<input type="text" name="emlAddrId" id="emlAddrId" class="inp-half" title="이메일주소1">
					<span class="wd25">@</span>
					<cm:makeTag cls="select" tagType="select" tagId="selEmlAddr" name="selEmlAddr" code="EML" defaultUseYn="Y" />
					<input type="text" name="emailAddr" id="emailAddr" class="inp-readonly" readonly title="이메일주소2">
					<button type="button" class="btn cancel" onclick="fn_emailCert()">인증 메일 발송</button>
				</li>
				<li>
					<label>인증번호</label>
					<input type="text" id="chkCertNo" name="chkCertNo" placeholder="메일에서 복사한 인증번호를 입력해주세요." title="인증번호">
					<button type="button" onclick="fn_emailCertNoChk()" class="btn">확인</button>
				</li>
			</ul>
		</article>

	</div>
</div>
<!-- ===== /container ====== -->